<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/home_mobileoffer_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_offers_message"
            style="@style/homeScreenOfferTextSize"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center|start"
            android:paddingLeft="17dp"
            android:paddingRight="16dp"
            android:text="@string/mobile_offer"
            android:textSize="17sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/couponsRightArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:contentDescription="@string/description"
            android:src="@drawable/white_right_arrow" />
    </RelativeLayout>

</LinearLayout>