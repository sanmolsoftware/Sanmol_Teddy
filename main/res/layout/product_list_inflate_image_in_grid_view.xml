<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_gridview_background"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvPromotionalOfferName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dip"
                android:background="@color/white"
                android:gravity="center"
                android:maxLines="2"
                android:minLines="2"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="@string/special_offer_dummy_text"
                android:textColor="#565656"
                android:textSize="12sp"
                android:visibility="invisible" >
            </TextView>

            <FrameLayout
                android:id="@+id/product_list_grid_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <ProgressBar
                    android:id="@+id/product_list_title_Progress_Bar"
                    style="@android:style/Widget.ProgressBar.Small.Inverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible" >
                </ProgressBar>

                <ImageView
                    android:id="@+id/imgItemImage"
                    android:layout_width="90dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/description"
                    android:padding="5dip" >
                </ImageView>

                <ImageView
                    android:id="@+id/imgItemImageduringTransition"
                    android:layout_width="90dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/description"
                    android:padding="5dip" >
                </ImageView>

                <ImageView
                    android:id="@+id/offersImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="6dip"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/description"
                    android:paddingLeft="10dip"
                    android:src="@drawable/offer"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" >

                    <ImageView
                        android:id="@+id/img_product_list_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:contentDescription="@string/description"
                        android:visibility="gone" >
                    </ImageView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/BadgeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="10dip"
                    android:adjustViewBounds="true"
                    android:padding="5dip"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/productListSortSaleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:layout_marginTop="2dip"
                android:orientation="vertical"
                android:paddingBottom="2dip"
                android:paddingLeft="3dip"
                android:paddingRight="3dip" >

                <TextView
                    android:id="@+id/tvBrandName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dip"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/riverBed"
                    android:textSize="12sp"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dip"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="#565656"
                    android:textSize="12sp" >
                </TextView>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/llSalePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imgRating1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dip"
                            android:layout_weight="50"
                            android:background="@drawable/icon_star_gray"
                            android:contentDescription="@string/description" >
                        </ImageView>

                        <ImageView
                            android:id="@+id/imgRating2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/icon_star_gray"
                            android:contentDescription="@string/description" >
                        </ImageView>

                        <ImageView
                            android:id="@+id/imgRating3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/icon_star_gray"
                            android:contentDescription="@string/description" >
                        </ImageView>

                        <ImageView
                            android:id="@+id/imgRating4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/icon_star_gray"
                            android:contentDescription="@string/description" >
                        </ImageView>

                        <ImageView
                            android:id="@+id/imgRating5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/icon_star_gray"
                            android:contentDescription="@string/description" >
                        </ImageView>

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:layout_marginTop="-3dip"
                            android:layout_weight="50"
                            android:textColor="@color/jaffa"
                            android:textSize="12sp" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dip" >

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/price"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:visibility="gone" >
                        </TextView>

                        <TextView
                            android:id="@+id/tvSalePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:maxLines="1"
                            android:textColor="@color/orange"
                            android:textSize="12sp" >
                        </TextView>

                        <TextView
                            android:id="@+id/tvActualPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/pdp_sale_price"
                            android:textSize="12sp" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>