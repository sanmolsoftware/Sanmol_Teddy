<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dynamicLayoutForHomeSection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >

        <TextView
            android:id="@+id/sectionMainTextView"
            style="@style/homeScreenTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/haul"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sectionSubText"
            style="@style/homeScreenSubTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/olapicSubText"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/horizontalBarView"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#919191" />

</LinearLayout>