<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true" android:state_window_focused="false"
          android:drawable="@drawable/address_selection_active" />
    <item android:state_checked="false" android:state_window_focused="false"
          android:drawable="@drawable/address_selection_inactive" />

    <item android:state_checked="true" android:state_pressed="true"
          android:drawable="@drawable/address_selection_active" />
    <item android:state_checked="false" android:state_pressed="true"
          android:drawable="@drawable/address_selection_inactive" />

    <item android:state_checked="true" android:state_focused="true"
          android:drawable="@drawable/address_selection_active" />
    <item android:state_checked="false" android:state_focused="true"
          android:drawable="@drawable/address_selection_inactive" />

    <item android:state_checked="false" android:drawable="@drawable/address_selection_inactive" />
    <item android:state_checked="true" android:drawable="@drawable/address_selection_active" />
    

</selector>
