<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llSubmitOrderFooter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:background="@color/background"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:weightSum="100" >

                <TextView
                    android:id="@+id/txtNoOfItems"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:gravity="right"
                    android:text="@string/merchandise_subtotal"
                    android:textColor="@color/riverBed"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/tvSubmitorderRawTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="20"
                    android:gravity="right"
                    android:text="@string/dollar_27"
                    android:textColor="@color/riverBed"
                    android:textSize="15sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:visibility="gone"
                android:weightSum="100" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:text="@string/subtotal"
                    android:textColor="@color/riverBed"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/tvSubmitorderSubTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="20"
                    android:gravity="right"
                    android:text="@string/dollar_27"
                    android:textColor="@color/riverBed"
                    android:textSize="15sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:weightSum="100" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:gravity="right"
                    android:text="@string/submit_order_shipping"
                    android:textColor="@color/riverBed"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/tvSubmitorderShipping"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="20"
                    android:gravity="right"
                    android:text="@string/dollar_five"
                    android:textColor="@color/riverBed"
                    android:textSize="15sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:weightSum="100" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:gravity="right"
                    android:text="@string/tax"
                    android:textColor="@color/riverBed"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/tvSubmitorderTax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="20"
                    android:gravity="right"
                    android:text="@string/dollar_five"
                    android:textColor="@color/riverBed"
                    android:textSize="15sp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout99"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_margin="8dip"
                android:weightSum="100" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="70" >
                </View>

                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="30"
                    android:background="@color/riverBed" >
                </View>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp" >
            </View>

            <LinearLayout
                android:id="@+id/linearLayout15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:weightSum="100" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:gravity="right"
                    android:text="@string/submit_total"
                    android:textColor="@color/riverBed"
                    android:textSize="15sp" >
                </TextView>

                <TextView
                    android:id="@+id/tvSubmitorderTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="20"
                    android:gravity="right"
                    android:text="@string/dollar_five"
                    android:textColor="@color/riverBed"
                    android:textSize="15sp" >
                </TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>