<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="20"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/submitOrderListItemImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >
            </ImageView>

            <ImageView
                android:id="@+id/submitOrderListItemGiftImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/freegift"
                android:visibility="gone" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="40"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/submitOrderListItemPdtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prod_name"
                android:textColor="#45545F"
                android:textSize="12sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/submitOrderListItemBrandName"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/brand_name"
                android:textColor="@color/riverBed"
                android:textSize="10sp" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/submitOrderListItemQunatity"
                style="@style/RiverBedRegular16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center|top"
                android:text="@string/brand_activity_text" >
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/submitOrderListItemPrice"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="20"
            android:gravity="right|top"
            android:text=""
            android:textColor="@color/riverBed"
            android:textSize="13sp"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

    <!--
         <Button android:text="View Gift" android:id="@+id/btnLogout" android:layout_margin="5dp" 
		style="@style/OrangeButton" android:layout_height="wrap_content" android:layout_width="wrap_content" 
		android:layout_gravity="right"> </Button>
    -->

</LinearLayout>